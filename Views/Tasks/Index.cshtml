@model List<TaskManagementSys.Models.TaskItem>
@{
    ViewData["Title"] = "Задачи";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Список задач</h2>
        <a asp-action="Create" class="btn btn-primary">+ Новая задача</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Задачи отсутствуют.</div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Название</th>
                    <th>Приоритет</th>
                    <th>Статус</th>
                    <th>Срок</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Title</td>
                        <td>@task.Priority</td>
                        <td>@task.Status</td>
                        <td>@task.DueDate?.ToShortDateString()</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-outline-secondary">Подробнее</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
